<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfileFragment"
    android:paddingTop="15dp"
    android:background="#010619"
    android:id="@+id/fragment_edit_profile">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/help_icon_profile"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/user_name_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amiko"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/user_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Edit_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/amiko"
                android:hint="First Name"
                android:textColorHint="@color/white"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/notification_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Edit_profile_secondname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amiko"
                android:hint="Second Name"
                android:textColorHint="@color/white"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/security_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Edit_profile_birthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amiko"
                android:hint="Birth-Date"
                android:textColorHint="@color/white"
                android:textAlignment="viewStart"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/help_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Edit_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amiko"
                android:hint="Email"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textAlignment="viewStart"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/help_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Edit_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Country"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textAlignment="viewStart"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/help_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Edit_profile_mobileNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Mobile Number"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textAlignment="viewStart"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <!--        <ImageView-->
            <!--            android:layout_width="35dp"-->
            <!--            android:layout_height="35dp"-->
            <!--            android:src="@mipmap/help_icon_profile"-->
            <!--            android:layout_gravity="center"-->
            <!--            />-->

            <EditText
                android:id="@+id/Edit_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amiko"
                android:hint="Gender"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textAlignment="viewStart"
                android:textSize="22sp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Update"
            android:id="@+id/update_button"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="#7738D1"
            app:cornerRadius = "20dp"
            android:onClick="updateButton"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

    </LinearLayout>
</FrameLayout>